container_commands:
  01_compile_typescript:
    command: "./node_modules/.bin/tsc server/index.ts --outDir . --target es2020 --module commonjs --moduleResolution node --allowSyntheticDefaultImports --esModuleInterop --skipLibCheck --resolveJsonModule --noEmit false"
    env:
      PATH: /opt/elasticbeanstalk/node-install/node-v18.20.4-linux-x64/bin/
  02_verify_compiled_file:
    command: "ls -la server/index.js && echo 'Arquivo JavaScript compilado com sucesso'" 