container_commands:
  01_compile_typescript:
    command: "cd server && npx tsc --project tsconfig.json --noEmitOnError false || echo 'TypeScript compilation completed with warnings'"
  02_verify_compiled_file:
    command: "ls -la server/dist/index.js && echo 'Arquivo JavaScript compilado com sucesso' || echo 'ERRO: Arquivo server/dist/index.js não encontrado'"
  03_check_dependencies:
    command: "echo 'Verificando dependências...' && ls -la node_modules/typescript && echo 'TypeScript OK'" 